            grid-column 3/4
            grid-row 3
        .btn-8
            grid-column 4/5
            grid-row 3            
            

    +above(640px)
        .carousel-wrap
            display grid
            grid-tempate-columns repeat(6, 1fr)
            grid-template-rows 1fr 1fr 1fr 1fr
