
#majors
    background rgba(complement($val),0.2)
    article 
        max-width 1280px
        margin auto
        
    .hirers 
        display flex
        justify-content space-around
        flex-wrap wrap
        max-width 740px
        margin auto
        padding-bottom 4rem
        
    .hirer 
        width 26%
    // .hirer:nth-child(1)
    //     margin 0 4rem 
         
    .major 
        position relative
        padding 1rem
        figcaption 
            position absolute
            right 1rem
            bottom 1rem
            left 1rem            
            padding 1rem
            background rgba(255,255,255,0.6)
            p    
                font-size 1.2rem
                line-height 1
                
    +above(640px)
        article 
            display grid
            grid-template-columns: repeat(2,1fr)
            grid-template-rows 3
            grid-gap .5rem
            // grid-auto-rows: minmax(3rem, auto);
            .major 
                padding 0
                .figcaption
                    margin 0
                    p 
                        font-size 1rem
            .major:nth-child(1)
                grid-column 1/2
                grid-row 1/2
            .major:nth-child(2)
                grid-column 2/3
                grid-row 1/2
            .major:nth-child(3)
                grid-column 1/2
                grid-row 2/3
            .major:nth-child(4)
                display flex
                align-items center
                justify-content center
                grid-column 2/3
                grid-row 2/3
            .major:nth-child(5)
                grid-column 1/2
                grid-row 3/4
            .major:nth-child(6)
                grid-column 2/3
                grid-row 3/4
    +above(1040px)
        article 
            display grid
            grid-template-columns: repeat(15,1fr)
            grid-template-rows 4
            grid-gap 2rem 1rem
            // .major:nth-child(1)
            //     grid-column 6/11
            //     grid-row 1/4
            .major:nth-child(1)
                grid-column 3/8
                grid-row 1/3
            .major:nth-child(2)
                grid-column 9/14
                grid-row 1/3
            .major:nth-child(3)
                grid-column 1/6
                grid-row 3/4
            .major:nth-child(4)
                grid-column 6/11
                grid-row 3/4                
            .major:nth-child(5)
                grid-column 11/16
                grid-row 3/4
            .major:nth-child(6)
                grid-column 6/11
                grid-row 4/5