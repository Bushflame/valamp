#top 
    padding 1rem 0 0
    background: linear-gradient(160deg, rgba(128,107,0,0.5), rgba(128,107,0,0.5) 60%, #806b00 60%, #806b00);
    height:100% 
    margin-top:0
    .top-grid 
        max-width 1280px
        margin 0 auto
    .intro 
        padding 2rem 0
        background-image url('./img/worker-o.png')
        background-repeat no-repeat
        background-size auto
        background-position center bottom
    .logo 
        margin 0 1rem
        max-width 350px
        margin 0 auto
    h1 
        color $val
        font-size 2.4rem
        text-align center
    .title-tag 
        color complement($val)-50%
        font-size 1.8rem
        padding 1rem 0
        text-align center
    .info 
        color $val
        font-size 1.6rem
        font-weight bold
        text-align center
    .features 
        background rgba(complement($val),.4)        
        color #fff
        font-size 1.8rem
        text-align center
        padding 1rem 0
    .about 
        // background rgba(complement($val),.4)
        margin 0 
        padding .6rem
        text-align center
        p  
            font-size 1.5rem
            line-height 1.5

   
    +above(640px)
        .top-grid 
            display grid
            grid-template-columns: repeat(2,1fr)
            grid-template-rows: 2  
            .intro 
                grid-column: 1/2
                grid-row 1
                padding 0
            .features
                grid-column 2/3
                grid-row 1
                display flex
                align-items center                
                font-size 1.5rem
                padding-left 2rem
                background transparent                    
            .about 
                grid-column 1/3
                grid-row 2
                margin-bottom 1rem
                background rgba(complement($val),.4)

                p 
                    font-size 1.2rem
    +above(960px)
        .top-grid     
            display grid
            grid-template-columns: repeat(2,1fr)
            grid-template-rows: 2 
            padding-top 4rem       
            .intro 
                grid-column: 1/2
                grid-row 1/3
                padding 0 0 4rem
            .features
                grid-column 2/3
                grid-row 1/2
                display flex
                align-items center
                justify-content center                
                font-size 1.5rem
                padding-left 2rem
                background transparent                    
            .about 
                grid-column 2/3
                grid-row 2/3
                margin-bottom 1rem
                background rgba(complement($val),.4)        
